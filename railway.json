{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "startCommand": "python railway_web_app.py"
  },
  "environments": {
    "production": {
      "variables": {
        "FLASK_APP": "railway_web_app.py",
        "FLASK_ENV": "production",
        "PYTHONPATH": "."
      }
    }
  }
}